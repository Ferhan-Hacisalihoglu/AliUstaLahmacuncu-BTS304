@model AliUsta.Models.UrunViewModel

@{
    ViewBag.Title = "Ürünü Sil";
}

<div class="container mt-4">
    <h2>@ViewBag.Title</h2>
    <hr />
    <h3 class="text-danger">Bu ürünü silmek istediğinizden emin misiniz?</h3>
    <div class="alert alert-warning">
        <strong>Uyarı!</strong> Bu işlem geri alınamaz.
    </div>

    <div>
        <h4>Ürün Detayları</h4>
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Adi)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Adi)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Fiyat)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Fiyat)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.KategoriAdi)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.KategoriAdi)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Aciklama)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Aciklama)
            </dd>
        </dl>

        @using (Html.BeginForm("Delete", "Urun", new { id = Model.ID }, FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.ID)

            <div class="mt-4">
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash-alt"></i> Evet, Sil
                </button>
                @Html.ActionLink("Hayır, Listeye Dön", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        }
    </div>
</div>