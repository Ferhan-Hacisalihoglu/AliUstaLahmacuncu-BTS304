@model IEnumerable<AliUsta.Models.TedarikciViewModel>

@{
    ViewBag.Title = "Tedarikçiler";
}

<div class="container mt-4">
    <h2>@ViewBag.Title</h2>
    <hr />

    <p>
        @Html.ActionLink("Yeni Tedarikçi Ekle", "Create", null, new { @class = "btn btn-success mb-3" })
    </p>

    @if (!Model.Any())
    {
        <div class="alert alert-info" role="alert">
            Gösterilecek tedarikçi bulunmamaktadır.
        </div>
    }
    else
    {
        <table class="table table-striped table-hover table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().ID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().Adi)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().Telefon)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().EPosta)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().MalzemeAdi)
                    </th>
                    <th style="width: 270px;">İşlemler</th> 
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Adi)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Telefon)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EPosta)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MalzemeAdi)
                        </td>
                        <td>
                            @Html.ActionLink("Düzenle", "Edit", new { id = item.ID }, new { @class = "btn btn-primary btn-sm me-1" })
                            @Html.ActionLink("Sil", "Delete", new { id = item.ID }, new { @class = "btn btn-danger btn-sm me-1" })
                            @Html.ActionLink("Alım Yap", "Create", "Alim", new { tedarikciId = item.ID }, new { @class = "btn btn-info btn-sm" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>