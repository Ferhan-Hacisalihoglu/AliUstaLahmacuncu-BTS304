@model IEnumerable<AliUsta.Models.MalzemeViewModel>

@{
    ViewBag.Title = "Malzemeler";
}

<div class="container mt-4">
    <h2>@ViewBag.Title</h2>
    <hr />

    <p>
        @Html.ActionLink("Yeni Malzeme Ekle", "Create", null, new { @class = "btn btn-success mb-3" })
    </p>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info" role="alert">
            Gösterilecek malzeme bulunmamaktadır.
        </div>
    }
    else
    {
        <table class="table table-striped table-hover table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().ID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().Adi)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().StokMiktari)
                    </th>
                    <th style="width: 180px;">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Adi)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StokMiktari)
                        </td>
                        <td>
                            @Html.ActionLink("Düzenle", "Edit", new { id = item.ID }, new { @class = "btn btn-primary btn-sm me-1" })
                            @Html.ActionLink("Sil", "Delete", new { id = item.ID }, new { @class = "btn btn-danger btn-sm" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>